<%- include('../../dashboard/partials/header.ejs') %> 
<%- include('../../dashboard/partials/side-bar.ejs') %>

<section id="main-content">
    <section class="wrapper">
<div class="row mt">
    <div class="col-md-12">
        <div class="content-panel">
            <table class="table table-striped table-advance table-hover">
                <h4><i class="fa fa-angle-right"></i>DANH SACH DON HANG</h4>
                <hr />
                <%if(listOrder && listOrder.length>0 ){%>
                    <% listOrder.forEach(item =>{%>

                <thead>
                    <tr>  
                        <h2><th><h3 class="fa fa-bullhorn"></h3>Customsers</th></h2>
                        <h2><th><i class="fa fa-bullhorn"></i> Product</th></h2>
                        <h2><th><i class="fa fa-bullhorn"></i> Total</th></h2>
                        <h2><th><i class="fa fa-bullhorn"></i> Adddress </th></h2>
                        <h2><th><i class="fa fa-bullhorn"></i> Note </th></h2>
                        <h2><th><i class="fa fa-bullhorn"></i> Pay </th></h2>
                        
                        <!-- <th><i class="fa fa-bookmark"></i> Profit</th>
                        <th><i class="fa fa-edit"></i> Status</th> -->

                    </tr>
                </thead>
                <tbody>          
                                <td><%=item.user.name%></td>          
                              
                                <td> <%if( item.products && item.products.length > 0 ){ %>
                                        <% item.products.forEach( element => { %>
                                            <%= element.title %>  
                                         <% }) %>
                                     <% } %>  
                                    </td>    

                                <td><%=item.total%></td>
                                <td><%=item.address%></td>  
                                <td><%=item.note%></td>
                                <td><%=item.pay%></td>                     
                                    <!-- <button class="btn btn-success btn-xs"><i class="fa fa-check"></i></button>  -->
                                <td>                                   
                                 <a href="/orders/remove-order/<%=item._id%>">  
                                   XÓA
                                </a>   
                               </td>  
                               <td>
                                <a href="/categorys/edit/<%=item._id%>">
                                    SỬA
                                </a>
                               </td>                                
                    </tr>   
                </tbody>
                <%})%>
                <%}%>
            </table>
        </div>
        <!-- /content-panel -->
    </div>
    <!-- /col-md-12 -->
</div>
</section>
</section>
<%- include('../../dashboard/partials/footer.ejs') %>
